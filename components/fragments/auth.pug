component.auth
    .messages(rosa-auth-messages=fragments.auth.messages)
    .sign(class="sign-in")
        | Sign in
        div( rosa-auth="signin:errors" rosa-auth:message )
        form.sign__form(action="#")
            div( rosa-auth="signin:login" rosa-auth:message)
            input( rosa-auth="signin:login")  
            label=fragments.auth.forms['label-login']
            div( rosa-auth="signin:pass" rosa-auth:message)
            input(type="password" rosa-auth="signin:pass")
            label=fragments.auth.forms['label-pass']
                button(rosa-auth="signin:request")=fragments.auth.forms['label-button']
    .sign(class="sign-up" style="display: ;")
        | Sign up 
        div( rosa-auth="signup:errors" rosa-auth:message)
        form.sign__form(action="#")
            div( rosa-auth="signup:login" rosa-auth:message)
            input(rosa-auth="signup:login")
            label=fragments.auth.forms['label-login']
            div( rosa-auth="signup:pass" rosa-auth:message)
            input(type="password" rosa-auth="signup:pass")
            label=fragments.auth.forms['label-pass']
            div
                span 
                    //- a(href="")=fragments.auth.signup.reg.linkLabel
                span  | 
                    //- a(href="")=fragments.auth.signup.pass.forgot
                button(rosa-auth="signup:request")=fragments.auth.forms['label-button']
button(rosa-auth="action:signout") sign out

style.
    div[rosa-auth="signin:errors"],div[rosa-auth="signup:errors"] {
        color: red;
    }
    button {
        border: 1px solid #ccc;
        padding: 5px 10px; 
        width: 80px;
    }
    .sign {
        border: 1px solid #ccc;
        padding: 10px;
        margin-left: auto;
        width: 320px;
    }
    form {
        display: flex;
        flex-direction: column; 
    }
    .sign label, .sign input {
        margin: 3px;
        
    }

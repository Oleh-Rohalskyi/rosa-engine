script.
    (function(){
        let close = document.querySelector(".rosa-error-message-wrap-close");
        close.addEventListener("click",()=>{
            document.querySelector(".rosa-error-message-wrap").classList.add("disabled");
        })
    })();
style.
    .rosa-error-message-wrap {
        border-radius: 0 0 5px 5px;
        z-index: 9999;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #42103E;
        width: 100%;
        box-sizing: border-box;
        padding: 15px 10px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
        transition: 0.5s;
        border-bottom: 1px solid #B74D51;
    }

    .rosa-error-message-wrap.disabled {
        top: -2000px;
    }
    .rosa-error-message-wrap pre {
        border-radius: 4px 4px 0 0;
        padding: 5px 10px;
        background-color: #fff;
        color: #7C43FF;
        width: calc(100% - 40px);
        margin: 3px auto 15px auto;
        overflow-x: scroll;
    }
    .rosa-error-message-wrap-close {
       cursor: pointer;
       margin-left: auto;
       border-radius: 3px;
       padding: 3px 5px;
       transition: 0.2s;
       background-color: #21081F;
       color: #F8B955;
       width: 50px;
       text-align: center;
       position: absolute;
       right: 15px;
       top: 10px;
    }
    .rosa-error-message-wrap-close:hover {
        color:#F9F871;
    }

    .rosa-error-message-wrap-title {
        font-size: 20px;
        color: #C84630;
        font-weight: bold;
        padding: 0 5px;
    }
    .rosa-error-message-wrap-message {
        font-size: 16px;
        color: #EDE8ED;
        padding: 5px;
    }
    .rosa-error-message-wrap-message span:first-child {
        font-size: 18px;
        color: #C84630;
    }
    .rosa-error-message-wrap-file {
        font-size: 16px;
        color: #310A31;
        padding: 0 5px;
    }
    .rosa-error-message-wrap-file a {
        display: inline-block;
        padding: 3px 5px;
        margin: 0 4px 0 0;
        line-height: 16px;
        border-radius: 3px;
        font-size: 16px;
        background-color: #21081F;
        color: #F8B955;
       transition: 0.2s;
    }
    .rosa-error-message-wrap-file a:hover {
        color:#F9F871;
    }
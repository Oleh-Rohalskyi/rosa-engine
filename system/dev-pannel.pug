.rosa-dev-pannel-error-messages(style="display:none;")
.rosa-dev-pannel(style="display:none;")
    .rosa-dev-pannel-timing
        +static("image","server","22px")
        div.rosa-dev-pannel-start-time 
        +static("image","page","22px")
        div.rosa-dev-pannel-page-time 
        +static("image","success","22px")
        div.rosa-dev-pannel-end-time 
    .rosa-dev-pannel-pagename
        b=name.toUpperCase()
    .rosa-dev-pannel-role
    if(name !== "admin")
        .rosa-dev-pannel-settings-button
            +getLink("admin")
                +static("image","settings","22px")
style.
    .rosa-dev-pannel img {
        margin: 0 5px 0 12px;
        background-color: #7A6092;
        border-radius: 3px;
        padding: 1px;
    }  
    .rosa-dev-pannel {
        z-index: 9998;
        align-items: center;
        color: #EDE8ED;
        background-color: #42103E;
        font-size: 17px;
        display: flex;
        flex-direction: row;
        bottom: 0;
        width: 100%;
        border-top: 1px solid #B74D51;
        border-radius: 3px 3px 0 0;
        box-sizing: border-box;
        padding: 3px 5px;
    }
    .rosa-dev-pannel-pagename {
        color: #EDE8ED;
        font-weight: bold;
        letter-spacing: 3px;
        margin-left: auto;
        margin-right: 5px;
    }
    .rosa-dev-pannel-role {
       cursor: pointer;
       margin-left: auto;
       border-radius: 3px;
       padding: 3px 5px;
       transition: 0.3s;
       background-color: #21081F;
        color: #F8B955;
    }
    .rosa-dev-pannel-role:hover {
        color:#F9F871;
    }
    .rosa-dev-pannel-timing {
        display: flex;
        align-items: center;
        flex-direction: row;
    }
    .rosa-dev-pannel-settings-button a {
        display: flex;
        align-items: center;
        cursor: pointer;
    }
    .rosa-dev-pannel-settings-button a img:hover {
        background-color: #C8A733;
    }
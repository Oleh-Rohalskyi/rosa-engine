admin#app
    fragments(:fragments="fragments")

script(type="text/x-template" id="fragments")
    .fragments fragments
        button(@click="add") add +
        fragment(v-for="(fragment,key) in formatedFragments" :fragment=fragment)

script(type="text/x-template" id="fragment")
    .fragment {{fragmentString}}
        

div.json(style="display:none" data-json=page.values)

script(type="text/javascript" src="/static/system/js/lib/jquery.js")
script(type="text/javascript" src="/static/system/js/lib/vue.js")
script(type="text/javascript" src="/static/system/js/admin/fast-admin.js")
style.
    list>div {
        margin-left: 20px;
        border-bottom: 1px solid #ccc;
        cursor: pointer;
    }
    fragments>button, pages>button {
        width: 100%;
        border-radius:0;
        font-size: 15px;
        background: #ccc;
    }
    fragments>button:hover, pages>button:hover {
        border-bottom: 1px solid #000;
    }
    list>div:hover {
        margin-left: 20px;
        border-bottom: 1px solid #000;
    }
    
    
